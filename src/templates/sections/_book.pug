section.section.section--underlined.book
  .section__sidebar
    .section__stuff
      .stuff-carousel(style="--dot-one-color: #232323; --dot-two-color: #fff; --dot-one-border: #232323; --dot-two-border: #232323;")
        .stuff-carousel__item
          img(src="./img/book_black.png", alt="Nika book", class="section__preview")
        .stuff-carousel__item
          img(src="./img/book_w.png", alt="Nika book", class="section__preview")

  .section__content
    .section__top
      h2.title
        span.title__text.title__text--border ETERNAL
        span.title__text.title__text--fill NOTEBOOK

      .grid-list
        each column in bookData
          .grid-list__column
            h3.grid-list__title= column.title
            p.grid-list__text= column.text

    .section__bottom
      .carousel#carousel
        .carousel__item
          .carousel__content
